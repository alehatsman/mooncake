# Grafana datasource configuration
apiVersion: 1

datasources:
  # Prometheus datasource
  - name: Prometheus
    type: prometheus
    access: proxy
    url: {{ prometheus_url | default('http://localhost:9090') }}
    isDefault: true
    editable: true

