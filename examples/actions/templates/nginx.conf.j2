server {
    listen {{ port }};
    server_name {{ server_name }};

    root {{ document_root }};
    index index.html index.htm;

    {% if enable_ssl %}
    ssl on;
    ssl_certificate {{ ssl_cert }};
    ssl_certificate_key {{ ssl_key }};
    {% endif %}

    location / {
        try_files $uri $uri/ =404;
    }

    access_log {{ log_dir }}/access.log;
    error_log {{ log_dir }}/error.log;
}
